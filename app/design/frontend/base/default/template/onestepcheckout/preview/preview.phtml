                    } else {
                        $baddresses[$i]['billing:'.$key] = $dataHelper->clearDash($value);
                        $saddresses[$i]['shipping:'.$key] = $dataHelper->clearDash($value);
                        $baddresses[$i]['billing:email'] = $customerEmail;
                        $saddresses[$i]['shipping:email'] = $customerEmail;
                    }
                }
            }
            $i++;
        }

