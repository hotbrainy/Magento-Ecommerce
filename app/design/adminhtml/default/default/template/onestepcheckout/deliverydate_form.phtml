        <?php if($dateEnabled):?>
        <div class="input-box input-deliverydate" style="float: left; margin-right: 15px;">
            <label for="deliverydate:date"><?php echo $this->__('Delivery Date');?><?php if($dateRequired):?> <span class="required">*</span><?php endif;?></label><br />
            <input class="input-text<?php if($dateRequired):?> required-entry<?php endif;?>" type="text" name="deliverydate[date]" readonly id="deliverydate:date" value="<?php echo Mage::helper('core')->escapeHtml($date); ?>">
        </div>
        <?php endif;?>
        <?php if($slotEnabled):?>
        <div class="input-box input-slotpicker" style="float: left;">
