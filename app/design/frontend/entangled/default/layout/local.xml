				<label>Product View, Image Column, Below Images</label>

				<!-- Class "block_product_img_bottom" left for backward compatibility -->
				<action method="setElementClass"><value>container_product_image_1 block_product_img_bottom std</value></action>

				<!-- For backward compatibility, load static block "block_product_img_bottom" -->
				<block type="cms/block" name="i_block_product_img_bottom">
					<action method="setBlockId"><block_id>block_product_img_bottom</block_id></action>
				</block>
			</block>

			<block type="cms/block" name="block_product_replace_related">
				<action method="setBlockId"><block_id>block_product_replace_related</block_id></action>
			</block>
			<block type="cms/block" name="block_product_replace_upsell">
				<action method="setBlockId"><block_id>block_product_replace_upsell</block_id></action>
			</block>

			<!-- Example: how to add custom static block to the product page.
				 Block needs to be loaded in product page template file with the following code:
				 echo $this->getChildHtml('my_unique_block_identifier');
			-->
			<!--
			<block type="cms/block" name="my_unique_block_identifier">
				<action method="setBlockId"><block_id>identifier_of_my_custom_static_block</block_id></action>
			</block>
			-->

		</reference> <!-- end: product.info -->

		<!-- Tags: additional actions.
			 Block with tags is originally added to "product.info.additional", so if we assign it to the group of collateral data,
			 we also need to remove it from "product.info.additional". -->
		<reference name="product_tag_list">
			<action method="addToParentGroup"
				ifconfig="ultimo/product_page/collateral_tags"><group>detailed_info</group></action>
		</reference>
		<reference name="product.info.additional">
			<action method="unsetChild"
				ifconfig="ultimo/product_page/collateral_tags"><name>product_tag_list</name></action>
		</reference>

		<!-- Reviews: additional actions.
			 Block with reviews is already added to "product.info", so if we assign it to the group of collateral data, we need to remove it from "product.info.additional". -->
		<reference name="product.reviews">
			<action method="addToParentGroup"
				ifconfig="ultimo/product_page/collateral_reviews"><group>detailed_info</group></action>
		</reference>
		<reference name="product.info">
			<action method="unsetChild"
				ifconfig="ultimo/product_page/collateral_reviews"><name>reviews</name></action> <!-- Remove by alias! -->
		</reference>

		<!-- Remove if tabs enabled.
			 Second part required to add reviews to tabs. See the first part in "info_tabs" block. -->
		<reference name="tabreviews">
			<block type="review/form" name="product.review.form" as="review_form">
				<block type="page/html_wrapper" name="product.review.form.fields.before" as="form_fields_before" translate="label">
					<label>Review Form Fields Before</label>
					<action method="setMayBeInvisible"><value>1</value></action>
				</block>
			</block>
		</reference>

		<!-- Related products: additional actions.
			 Block with related products is already added to "product.info", so if we assign it to the group of collateral data,
			 we also need to remove it from "product.info". -->
		<reference name="related_products_wrapper">
			<action method="addToParentGroup"
				ifconfig="ultimo/product_page/collateral_related"><group>detailed_info</group></action>
		</reference>
		<reference name="product.info">
			<action method="unsetChild"
				ifconfig="ultimo/product_page/collateral_related"><name>related_products_wrapper</name></action>
		</reference>

		<!-- Up-sells products - additional actions.
			 Block with upsells is originally added to "product.info", so if we assign it to the group of collateral data,
			 we also need to remove it from "product.info". -->
		<reference name="upsell_products_wrapper">
			<action method="addToParentGroup"
				ifconfig="ultimo/product_page/collateral_upsell"><group>detailed_info</group></action>
		</reference>
		<reference name="product.info">
			<action method="unsetChild"
				ifconfig="ultimo/product_page/collateral_upsell"><name>upsell_products_wrapper</name></action> <!-- Remove by alias! -->
		</reference>

		<!-- Remove "add to wishlist/compare" links from options box. It is already inserted in product view. -->
		<reference name="product.info.options.wrapper.bottom">
			<action method="unsetChild"><name>product.info.addto</name></action>
		</reference>

		<!-- Alerts -->
		<reference name="productalert.price">
			<action method="setIconName"><value>alarm</value></action>
		</reference>

		<reference name="productalert.stock">
			<action method="setIconName"><value>alarm</value></action>
		</reference>

		<!-- Container for configurable swatches module -->
		<reference name="product.info.media">
			<block type="core/text_list" name="product.info.media.after" as="after" />
		</reference>

