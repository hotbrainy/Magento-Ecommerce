                <?php foreach ($slotTimes as $slot):?>
                    <option value="<?php echo $slot['start'].'-'.$slot['end'];?>"<?php if($quote->getIoscDdateSlot() && $quote->getIoscDdateSlot() == $slot['start'].'-'.$slot['end'] ){ echo ' selected';}?>><?php echo $slot['start'].'-'.$slot['end'];?></option>
