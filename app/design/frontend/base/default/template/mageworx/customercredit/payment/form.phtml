$helper = Mage::helper('mageworx_customercredit');

$creditValue = $this->getCreditValue();
$creditValueCurrency = Mage::helper('core')->currency($helper->getValueExchangeRateDivided($this->getCreditValue()));
$realValue = $helper->getRealCreditValue();
$realValueCurrency = Mage::helper('core')->currency($helper->getValueExchangeRateDivided($helper->getRealCreditValue()));

?>
<fieldset class="form-list">
    <ul id="payment_form_<?php echo $this->getMethodCode() ?>" style="display:none">
        <li>
            <?php if ($creditValue == $realValue): ?>
                <label><?php echo $helper->__("Using all your %s credits (%s)", $creditValue, $creditValueCurrency)?></label>
            <?php else: ?>
                <label><?php echo $helper->__("Using %s credits (%s) of %s credits (%s)", $creditValue, $creditValueCurrency, $realValue, $realValueCurrency)?></label>
            <?php endif ?>
        </li>
    </ul>
</fieldset>