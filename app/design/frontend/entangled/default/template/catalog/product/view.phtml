				<h1 itemprop="name"><?php echo $_helper->productAttribute($_product, $_product->getName(), 'name') ?></h1>
				<?php
					$_authors = explode(',',$_product->getPublishAuthor());
					$authorCount = count($_authors);
				?>
				<?php if($authorCount > 0):?>
					<p>
						<?php echo $this->__('by'); ?>
					<?php
					$author_names = array();
					foreach($_authors as $_author) {
						$author = Mage::getModel('publish/author')->load($_author);
						$author_html[] = '<a href="'.$author->getAuthorUrl().'">'.$author->getName().'</a>';
					}
					echo implode(', ',$author_html);
					?>
					</p>
				<?php endif; ?>
