/**
 * - Pager moved after sorter. Show pager only if there are pages.
 * - Amount and limiter moved inside sorter
 * - Changed order of the main elements
 */
?>


<?php if( $this->isExpanded() ): ?>
<ul class="sort_listing">
  <li>
  <div class="form-group">
    <label for="sel1">Sort:</label>
    <select onchange="setLocation(this.value)" class="form-control" id="sel1">
	<?php foreach($this->getAvailableOrders() as $_key=>$_order): if($_order != "Position") {
	if($_order=='Release Date') { $orderType = 'desc';} else {$orderType = 'asc';}
	?>
    <option value="<?php echo $this->getOrderUrl($_key, $orderType); ?>"<?php if($this->isOrderCurrent($_key)): ?> selected="selected"<?php endif; ?>>                        
    <?php echo $this->__($_order) ?>
    </option>
    <?php } endforeach; ?>
    </select>
    <div class="clearfix"></div>
    </div> 
  </li>
 
  
  
  
<?php if( $this->isEnabledViewSwitcher() ): ?>
	<?php $_modes = $this->getModes(); ?>
	<?php if($_modes && count($_modes)>1): ?>
		<?php foreach (array_reverse($this->getModes()) as $_code=>$_label): ?>
		<?php  $codeToLower = strtolower($_code); 
		 if($this->isModeActive($_code)):?>
        
        <?php if($codeToLower=='grid'){?>
		 <li class="sort_icon"><span class="glyphicon glyphicon-th-large active" aria-hidden="true"></span></li> 
        <?php }else{ ?>
         <li class="bar_icon"><span class="glyphicon glyphicon-align-justify active" aria-hidden="true"></span></li>
        <?php } ?>
        
		<?php else: ?>
        
        <?php if($codeToLower=='grid'){?>
		 <li class="sort_icon"><a href="<?php echo $this->getModeUrl($_code) ?>"><span class="glyphicon glyphicon-th-large" aria-hidden="true"></span></a></li> 
        <?php }else{ ?>
         <li class="bar_icon"><a href="<?php echo $this->getModeUrl($_code) ?>"><span class="glyphicon glyphicon-align-justify" aria-hidden="true"></span></a></li>
        <?php } ?>
  		<?php endif; ?>
		<?php endforeach; ?>
	<?php endif; ?>
<?php endif; ?>

  </ul>
<?php endif; ?>
	
